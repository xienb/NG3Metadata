<?xml version="1.0" encoding="utf-8"?>
<!--Supcan Freeform -->
<freeform>
  <Properties bgColor="#e5eaff,#faffff" key="Id">
    <expresses>
      <express>total=round(price*num, 2)</express>
      <express>price=round(total/num, 4)</express>
    </expresses>
  </Properties>
  <Fonts>
    <Font faceName="微软雅黑" size="-13" />
    <Font size="14" />
    <Font size="-16" bold="1"/>
  </Fonts>
  <Objects>
    <TableLayout id="MyFreeFormLayout" width='100%' y1='.bottom + 20' >
      <col width='2%'/>
      <col width='5%'/>
      <col width='27%'/>
      <col width='5%'/>
      <col width='27%'/>
      <col width='5%'/>
      <col width='27%'/>
      <col width='2%'/>
      <tr height='24'>
        <td/>
        <td>
          <input id="id" LeftText="员工编号: " width='2' editSize='1'/>
        </td>
        <td/>
        <td>
          <input id="name" LeftText="员工姓名: " width='2' editSize='1'/>
        </td>
        <td/>
        <td>
          <input id="birth" LeftText="出生年月: " width='2' editSize="1" defaultvalue="=now()" datatype="date" />
        </td>
        <td/>
      </tr>
      <tr height='4'/>
      <tr height='24'>
        <td/>
        <td>
          <input id="sex" LeftText="性别: " width='2' type="droplist" droplistID="DropSex"/>
        </td>
        <td/>
        <td>
          <input id="num" LeftText="整数: " width='2' datatype="int" />
        </td>
        <td/>
        <td>
          <input id="decimalNum" LeftText="小数: " width='2' datatype="double" />
        </td>
        <td/>
      </tr>
      <tr height='4'/>
      <tr height='24'>
        <td/>
        <td>
          <input id="time" LeftText="时刻: " width='2' datatype="datetime" defaultvalue="=now()"/>
        </td>
        <td/>
        <td/>
        <td/>
        <td/>
        <td/>
      </tr>
      <tr height='4'/>
      <tr height='180'>
        <td/>
        <td>
          <input id="remark" LeftText="备注: " type="MultiLineEdit" LeftTextAlign="right" width="4" datatype="string" />
        </td>
        <td/>
      </tr>
    </TableLayout>
  </Objects>
  <DropLists>
    <DropList id="DropSex">
      <item key="1">男</item>
      <item key="2">女</item>
    </DropList>
  </DropLists>
</freeform>
